		<?php echo $form->error($model,'firstname'); ?>
	</p>
	<p>
		<?php echo $form->labelEx($model,'LastName'."<span class='required'>*</span>"); ?>
		<?php echo $form->textField($model,'lastname',array('size'=>20,'maxlength'=>30,'class'=>'required')); ?>
		<?php echo $form->error($model,'lastname'); ?>
